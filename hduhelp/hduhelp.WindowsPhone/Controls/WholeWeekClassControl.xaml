                    <TextBlock Text="周一" Foreground="#FF173884" FontFamily="DengXian Light" FontSize="20" Margin="-10,5,0,0" />
                </PivotItem.Header>
                <Grid>
                    <ItemsControl x:Name="IcMon" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" />
                </Grid>
            </PivotItem>
            <PivotItem Margin="0,0,0,0" x:Name="PviTue">
